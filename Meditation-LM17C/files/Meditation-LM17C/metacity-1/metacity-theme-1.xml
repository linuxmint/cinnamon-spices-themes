<?xml version="1.0"?>
<metacity_theme>
<info>
  <name>Meditation-LM17C</name>
  <author>None</author>
  <copyright>GPL v3</copyright>
  <date>2014</date>
  <description>LinuxMint 17 Cinnamon Theme</description>
</info>

<constant name="IconTitleSpacing" value="0"/>

<frame_geometry name="normal"  rounded_top_left="true" rounded_top_right="true" rounded_bottom_left="false" rounded_bottom_right="false" title_scale="medium">
  <distance name="left_width" value="4"/>
  <distance name="right_width" value="4"/>
  <distance name="bottom_height" value="4"/>
  <distance name="left_titlebar_edge" value="9"/>
  <distance name="right_titlebar_edge" value="12"/>
  <distance name="button_width" value="16"/>
  <distance name="button_height" value="16"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="4" right="4" top="6" bottom="6"/>
  <border name="button_border" left="3" right="0" top="1" bottom="0"/>
</frame_geometry>

<frame_geometry name="maximized"   rounded_top_left="true" rounded_top_right="true" rounded_bottom_left="false" rounded_bottom_right="false" title_scale="medium">
  <distance name="left_width" value="4"/>
  <distance name="right_width" value="4"/>
  <distance name="bottom_height" value="4"/>
  <distance name="left_titlebar_edge" value="9"/>
  <distance name="right_titlebar_edge" value="12"/>
  <distance name="button_width" value="16"/>
  <distance name="button_height" value="16"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="4" right="4" top="6" bottom="6"/>
  <border name="button_border" left="3" right="0" top="1" bottom="0"/>
</frame_geometry>

<frame_geometry name="border" parent="normal" has_title="false">
  <distance name="button_width" value="16"/>
  <distance name="button_height" value="16"/>
  <border name="title_border" left="4" right="4" top="6" bottom="6"/>
  <border name="button_border" left="3" right="0" top="1" bottom="0"/>
</frame_geometry>

<frame_geometry name="border-maximized" parent="maximized" has_title="false">
  <distance name="button_width" value="16"/>
  <distance name="button_height" value="16"/>
  <border name="title_border" left="4" right="4" top="6" bottom="6"/>
  <border name="button_border" left="3" right="0" top="1" bottom="0"/>
</frame_geometry>

<draw_ops name="title-text-focused">
  <title color="#f2f2f2" x="((width - title_width) / 2)" y="((height - title_height) / 2)"/>
</draw_ops>

<draw_ops name="title-text-unfocused">
  <title color="#666666" x="((width - title_width) / 2)" y="((height - title_height) / 2)"/>
</draw_ops>

<draw_ops name="blank">
</draw_ops>

<draw_ops name="title">
  <image filename="titlebar-left-focused.png" x="0" y="0" width="object_width" height="height"/>
  <image filename="titlebar-mid-focused.png" x="6" y="0" width="width" height="height"/>
  <image filename="titlebar-right-focused.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="title-maximized">
  <image filename="titlebar-left-focused.png" x="0" y="0" width="object_width" height="height"/>
  <image filename="titlebar-mid-focused.png" x="6" y="0" width="width" height="height"/>
  <image filename="titlebar-right-focused.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="title-shaded">
  <image filename="titlebar-left-focused.png" x="0" y="0" width="object_width" height="height"/>
  <image filename="titlebar-mid-focused.png" x="6" y="0" width="width" height="height"/>
  <image filename="titlebar-right-focused.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="title-unfocused">
  <image filename="titlebar-left-unfocused.png" x="0" y="0" width="object_width" height="height"/>
  <image filename="titlebar-mid-unfocused.png" x="6" y="0" width="width" height="height"/>
  <image filename="titlebar-right-unfocused.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="title-maximized-unfocused">
  <image filename="titlebar-left-unfocused.png" x="0" y="0" width="object_width" height="height"/>
  <image filename="titlebar-mid-unfocused.png" x="6" y="0" width="width" height="height"/>
  <image filename="titlebar-right-unfocused.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="title-shaded-unfocused">
  <image filename="titlebar-left-unfocused.png" x="0" y="0" width="object_width" height="height"/>
  <image filename="titlebar-mid-unfocused.png" x="6" y="0" width="width" height="height"/>
  <image filename="titlebar-right-unfocused.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>

<draw_ops name="frame-left-focused">
  <image filename="frame-left-focused.png" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="frame-left-unfocused">
  <image filename="frame-left-unfocused.png" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="frame-right-focused">
  <image filename="frame-right-focused.png" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="frame-right-unfocused">
  <image filename="frame-right-unfocused.png" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="frame-bottom-focused">
  <image filename="frame-bottom-left-focused.png" x="0" y="0" width="object_width" height="object_height"/>
  <image filename="frame-bottom-mid-focused.png" x="4" y="0" width="width" height="object_height"/>
  <image filename="frame-bottom-right-focused.png" x="width - object_width" y="0" width="object_width" height="object_height"/>
</draw_ops>

<draw_ops name="frame-bottom-unfocused">
  <image filename="frame-bottom-left-unfocused.png" x="0" y="0" width="object_width" height="object_height"/>
  <image filename="frame-bottom-mid-unfocused.png" x="4" y="0" width="width" height="object_height"/>
  <image filename="frame-bottom-right-unfocused.png" x="width - object_width" y="0" width="object_width" height="object_height"/>
</draw_ops>

<draw_ops name="button-close-focused">
  <image filename="button-close-foc.png" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="button-close-prelight">
  <image filename="button-close-prelight.png" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="button-close-unfocused">
  <image filename="button-close-unfoc.png" x="0" y="0" width="width" height="height"/>
</draw_ops>

<draw_ops name="button-max-focused">
  <image filename="button-max-foc.png" x="0" y="0" width="width" height="height"/>
